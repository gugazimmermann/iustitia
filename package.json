{
  "name": "iustitia",
  "description": "Iustitia - App pra Advogados",
  "version": "0.7.4",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": [
        "yarn test ",
        "yarn integration"
      ]
    }
  },
  "lint-staged": {
    "**/*.ts*": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "start:db": "docker-compose up -d",
    "stop:db": "docker-compose down",
    "start:landing-page": "nx serve landing-page --port=4200",
    "start:site": "nx serve site --port=4201",
    "start:api": "nx serve api",
    "build:landing-page": "nx build landing-page",
    "build:site": "nx build site",
    "test:landing-page": "nx test landing-page",
    "test:landing-page-components": "nx test landing-page-components",
    "test:landing-page-pages": "nx test landing-page-pages",
    "test:site": "nx test site",
    "test:site-auth": "nx test site-auth",
    "postinstall": "husky install"
  },
  "private": true,
  "dependencies": {
    "@tailwindcss/forms": "^0.3.3",
    "autoprefixer": "^10.3.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "postcss": "^8.3.6",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.2.0",
    "regenerator-runtime": "0.13.7",
    "sequelize": "^6.6.5",
    "tailwindcss": "^2.2.8",
    "tslib": "^2.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nrwl/cli": "12.8.0",
    "@nrwl/cypress": "12.8.0",
    "@nrwl/eslint-plugin-nx": "12.8.0",
    "@nrwl/express": "12.8.0",
    "@nrwl/jest": "12.8.0",
    "@nrwl/linter": "12.8.0",
    "@nrwl/node": "12.8.0",
    "@nrwl/react": "12.8.0",
    "@nrwl/tao": "12.8.0",
    "@nrwl/web": "12.8.0",
    "@nrwl/workspace": "12.8.0",
    "@testing-library/react": "11.2.6",
    "@testing-library/react-hooks": "7.0.1",
    "@types/express": "4.17.0",
    "@types/jest": "26.0.24",
    "@types/node": "14.14.33",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "@types/react-router-dom": "5.1.7",
    "@typescript-eslint/eslint-plugin": "~4.28.3",
    "@typescript-eslint/parser": "~4.28.3",
    "babel-jest": "27.0.6",
    "cypress": "^8.3.0",
    "eslint": "7.22.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.23.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "^7.0.2",
    "jest": "27.0.3",
    "prettier": "^2.3.1",
    "ts-jest": "27.0.3",
    "typescript": "~4.3.5"
  }
}
