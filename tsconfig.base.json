{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@iustitia/api/auth": ["libs/api/auth/src/index.ts"],
      "@iustitia/api/dashboard": ["libs/api/dashboard/src/index.ts"],
      "@iustitia/api/database": ["libs/api/database/src/index.ts"],
      "@iustitia/api/email": ["libs/api/email/src/index.ts"],
      "@iustitia/api/mercadopago": ["libs/api/mercadopago/src/index.ts"],
      "@iustitia/api/public": ["libs/api/public/src/index.ts"],
      "@iustitia/landing-page/components": [
        "libs/landing-page/components/src/index.ts"
      ],
      "@iustitia/landing-page/pages": ["libs/landing-page/pages/src/index.ts"],
      "@iustitia/react-routes": ["libs/react-routes/src/index.ts"],
      "@iustitia/site/auth": ["libs/site/auth/src/index.ts"],
      "@iustitia/site/dashboard": ["libs/site/dashboard/src/index.ts"],
      "@iustitia/site/shared-components": [
        "libs/site/shared-components/src/index.ts"
      ],
      "@iustitia/site/shared-utils": ["libs/site/shared-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
